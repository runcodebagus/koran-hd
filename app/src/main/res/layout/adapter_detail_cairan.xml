<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pink"
    android:paddingBottom="1dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/txt_max_cairan"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0 ml"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ttlmax" />

        <TextView
            android:id="@+id/txt_jml_urin"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="end"
            android:text="0 ml"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_batas_cairan" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Tanggal"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_tgl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="17/8/2023"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/batas"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="Batas Max Cairan :"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tanggal" />

        <TextView
            android:id="@+id/jmlurin"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="Jml Urin :"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batas" />

        <TextView
            android:id="@+id/ttlmax"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="Total Max Cairan / Hari"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jmlurin" />

        <TextView
            android:id="@+id/txt_batas_cairan"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="end"
            android:text="0 ml"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_tgl" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_max_cairan" />

        <TextView
            android:id="@+id/ttlkon"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:text="Total Konsumsi"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialDivider" />

        <TextView
            android:id="@+id/totalkon"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0 ml"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ttlkon" />

        <TextView
            android:id="@+id/ss"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/pink"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalkon" />

        <TextView
            android:id="@+id/txt_sisa"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0 ml"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/ss"
            app:layout_constraintTop_toBottomOf="@+id/ssa" />

        <TextView
            android:id="@+id/pr"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="Persentase"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ss"
            app:layout_constraintTop_toBottomOf="@+id/txt_sisa" />

        <TextView
            android:id="@+id/ssa"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="Sisa"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ss"
            app:layout_constraintTop_toTopOf="@+id/ss" />

        <TextView
            android:id="@+id/txt_presentase"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0 %"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/ss"
            app:layout_constraintTop_toBottomOf="@+id/pr" />

        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="255dp"
            android:layout_height="46dp"
            android:layout_marginTop="5dp"
            android:text="Tambah Konsumsi Cairan"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dt" />

        <TextView
            android:id="@+id/dt"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Data Konsumsi"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ss" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dt" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@+id/ttlmax"
            app:layout_constraintTop_toBottomOf="@+id/txt_jml_urin"
            app:srcCompat="@drawable/edit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>